<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS Permissions -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Contacts (for phone number picker) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Other -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".BHomeAlarmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BHomeAlarm"
        tools:targetApi="34">

        <!-- Main Activity -->
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BHomeAlarm">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SMS Receiver for incoming SMS -->
        <receiver
            android:name=".service.SmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- SMS Status Receiver for sent/delivered status -->
        <receiver
            android:name=".service.SmsSentReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="it.bhomealarm.SMS_SENT" />
                <action android:name="it.bhomealarm.SMS_DELIVERED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
