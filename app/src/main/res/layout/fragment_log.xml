<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout della schermata Log dell'applicazione BHomeAlarm.
    Questa schermata mostra lo storico delle comunicazioni SMS con la centrale di allarme,
    permettendo di visualizzare i messaggi inviati e ricevuti per debug e monitoraggio.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.LogFragment">

    <!-- Sezione AppBar con toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar con pulsante indietro, titolo e menu azioni -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_log"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/menu_log" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ========================================== -->
    <!-- LISTA LOG                                  -->
    <!-- RecyclerView con lo storico comunicazioni  -->
    <!-- ========================================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_logs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="10"
        tools:listitem="@layout/item_log" />

    <!-- ========================================== -->
    <!-- STATO VUOTO                                -->
    <!-- Mostrato quando non ci sono log registrati -->
    <!-- ========================================== -->
    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Icona grande per stato vuoto -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.5"
            android:src="@drawable/ic_list"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Messaggio stato vuoto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/log_empty"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
