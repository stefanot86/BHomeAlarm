<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout della schermata Utenti dell'applicazione BHomeAlarm.
    Questa schermata mostra la lista degli utenti configurati nel sistema di allarme,
    permettendo di visualizzare e gestire i permessi di ciascun utente.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.UsersFragment">

    <!-- Sezione AppBar con toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar con pulsante indietro e titolo -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_users"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ========================================== -->
    <!-- LISTA UTENTI                               -->
    <!-- RecyclerView con gli utenti configurati    -->
    <!-- ========================================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="8"
        tools:listitem="@layout/item_user" />

    <!-- ========================================== -->
    <!-- STATO VUOTO                                -->
    <!-- Mostrato quando non ci sono utenti configurati -->
    <!-- ========================================== -->
    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Icona grande per stato vuoto -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.5"
            android:src="@drawable/ic_people"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Messaggio principale stato vuoto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/users_empty"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Descrizione aggiuntiva stato vuoto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/users_empty_desc"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
