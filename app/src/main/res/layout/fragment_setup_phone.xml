<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout della schermata Setup Telefono dell'applicazione BHomeAlarm.
    Questa schermata fa parte del wizard di configurazione iniziale e permette
    all'utente di inserire il numero di telefono della centrale di allarme.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Toolbar con titolo schermata -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/title_setup_phone" />

    <!-- ========================================== -->
    <!-- CONTENUTO SCROLLABILE                      -->
    <!-- Form per l'inserimento del numero telefono -->
    <!-- ========================================== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- ========================================== -->
            <!-- SEZIONE HEADER                             -->
            <!-- Icona e testi introduttivi                 -->
            <!-- ========================================== -->

            <!-- Icona telefono -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/title_setup_phone"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary" />

            <!-- Titolo della schermata -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/setup_phone_title"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface" />

            <!-- Descrizione dello step -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/setup_phone_description"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- ========================================== -->
            <!-- CAMPO INPUT NUMERO TELEFONO                -->
            <!-- Con icona per selezione da rubrica         -->
            <!-- ========================================== -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_phone"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_alarm_phone"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_contacts"
                app:endIconContentDescription="@string/action_pick_contact">

                <!-- Campo di testo per numero telefono -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Suggerimento per l'utente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/setup_phone_hint"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Spazio flessibile per spingere i pulsanti in basso -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- ========================================== -->
            <!-- PULSANTI AZIONE                            -->
            <!-- Continua e Salta                           -->
            <!-- ========================================== -->

            <!-- Pulsante Continua - disabilitato finche' non si inserisce un numero valido -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:enabled="false"
                android:text="@string/action_continue" />

            <!-- Pulsante Salta - permette di procedere senza configurare il numero -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_skip"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_skip" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
