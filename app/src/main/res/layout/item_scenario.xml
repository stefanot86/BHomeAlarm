<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout per un singolo elemento scenario nella lista scenari.
    Mostra le informazioni dello scenario (nome e zone incluse)
    all'interno di una card cliccabile per selezionare lo scenario.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:rippleColor="?attr/colorControlHighlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icona dello scenario (casa, notte, ecc.) -->
        <ImageView
            android:id="@+id/icon_scenario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            app:tint="?attr/colorPrimary" />

        <!-- Sezione informazioni scenario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome dello scenario -->
            <TextView
                android:id="@+id/text_scenario_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                tools:text="Casa" />

            <!-- Lista zone incluse nello scenario -->
            <TextView
                android:id="@+id/text_scenario_zones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                tools:text="Zone: 1, 2, 3, 4" />

        </LinearLayout>

        <!-- Freccia navigazione -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
