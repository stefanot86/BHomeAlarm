<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout della schermata Impostazioni dell'applicazione BHomeAlarm.
    Questa schermata fornisce accesso a tutte le configurazioni dell'app:
    - Configurazione del numero di telefono dell'allarme
    - Gestione utenti autorizzati
    - Scenari di attivazione
    - Selezione SIM per l'invio SMS
    - Informazioni sull'app
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SettingsFragment">

    <!-- Sezione AppBar con toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar con pulsante indietro e titolo -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_settings"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenuto scrollabile della schermata -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ========================================== -->
            <!-- SEZIONE CONFIGURAZIONE                     -->
            <!-- Impostazioni relative alla centrale di allarme -->
            <!-- ========================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/section_configuration"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Voce: Numero di telefono dell'allarme -->
                    <LinearLayout
                        android:id="@+id/item_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Icona telefono -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_phone"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <!-- Testo numero configurato -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_phone_number"
                                android:textAppearance="?attr/textAppearanceBodyLarge" />

                            <!-- Mostra il numero configurato o "Non configurato" -->
                            <TextView
                                android:id="@+id/text_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/not_configured"
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                        </LinearLayout>

                        <!-- Freccia navigazione -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Divisore tra le voci -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/dividerColor" />

                    <!-- Voce: Configura sistema -->
                    <LinearLayout
                        android:id="@+id/item_configure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Icona sincronizzazione -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_sync"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <!-- Testo configurazione -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_configure"
                                android:textAppearance="?attr/textAppearanceBodyLarge" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_configure_desc"
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                        </LinearLayout>

                        <!-- Freccia navigazione -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- SEZIONE GESTIONE                           -->
            <!-- Gestione utenti e scenari                  -->
            <!-- ========================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/section_management"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Voce: Gestione utenti -->
                    <LinearLayout
                        android:id="@+id/item_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Icona persone -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_people"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <!-- Testo utenti -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_users"
                                android:textAppearance="?attr/textAppearanceBodyLarge" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_users_desc"
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                        </LinearLayout>

                        <!-- Freccia navigazione -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Divisore tra le voci -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/dividerColor" />

                    <!-- Voce: Scenari di attivazione -->
                    <LinearLayout
                        android:id="@+id/item_scenarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Icona lista -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_list"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <!-- Testo scenari con contatore -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_scenarios"
                                android:textAppearance="?attr/textAppearanceBodyLarge" />

                            <!-- Mostra il numero di scenari configurati -->
                            <TextView
                                android:id="@+id/text_scenarios_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scenarios_count_default"
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                        </LinearLayout>

                        <!-- Freccia navigazione -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- SEZIONE SELEZIONE SIM                      -->
            <!-- Permette di scegliere quale SIM usare per SMS -->
            <!-- ========================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/section_sim"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <!-- Voce: Selezione SIM -->
                <LinearLayout
                    android:id="@+id/item_sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icona SIM -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_sim"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <!-- Testo SIM selezionata -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_sim"
                            android:textAppearance="?attr/textAppearanceBodyLarge" />

                        <!-- Mostra la SIM attualmente selezionata -->
                        <TextView
                            android:id="@+id/text_sim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sim_default"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                    </LinearLayout>

                    <!-- Freccia navigazione -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- SEZIONE INFORMAZIONI                       -->
            <!-- Informazioni sull'applicazione             -->
            <!-- ========================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/section_info"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <!-- Voce: Informazioni app -->
                <LinearLayout
                    android:id="@+id/item_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icona informazioni -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <!-- Testo versione app -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_info"
                            android:textAppearance="?attr/textAppearanceBodyLarge" />

                        <!-- Mostra la versione dell'applicazione -->
                        <TextView
                            android:id="@+id/text_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version_default"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                    </LinearLayout>

                    <!-- Freccia navigazione -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
