<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout per un singolo elemento zona nella lista selezione zone.
    Utilizzato nella creazione di scenari personalizzati per selezionare
    quali zone includere nell'attivazione dell'allarme.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:rippleColor="?attr/colorControlHighlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Checkbox per selezione/deselezione zona -->
        <!-- Non cliccabile direttamente, gestito dal click sulla card -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false" />

        <!-- Sezione nome zona -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome descrittivo della zona -->
            <TextView
                android:id="@+id/text_zone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                tools:text="Zona 1 - Ingresso" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
