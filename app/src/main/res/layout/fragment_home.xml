<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout della schermata Home dell'applicazione BHomeAlarm.
    Questa schermata principale mostra lo stato corrente del sistema di allarme
    e fornisce i controlli rapidi per armare, disarmare e verificare lo stato.
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">

    <!-- Sezione AppBar con toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar principale con titolo app e menu -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:menu="@menu/menu_home" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenuto scrollabile della schermata -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ========================================== -->
            <!-- CARD STATO SISTEMA                         -->
            <!-- Mostra lo stato attuale del sistema di allarme -->
            <!-- ========================================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icona indicatore stato -->
                    <ImageView
                        android:id="@+id/icon_status"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_status_unknown"
                        android:contentDescription="@string/status_icon"
                        app:tint="?attr/colorOnSurface" />

                    <!-- Informazioni stato -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Etichetta "Stato" -->
                        <TextView
                            android:id="@+id/text_status_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_label"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <!-- Valore stato corrente (Armato/Disarmato/Sconosciuto) -->
                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_unknown"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                        <!-- Timestamp ultimo controllo -->
                        <TextView
                            android:id="@+id/text_last_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            tools:text="Ultimo check: 10:30" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- CARD AZIONE ARMA                           -->
            <!-- Permette di attivare il sistema di allarme -->
            <!-- ========================================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_arm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:rippleColor="?attr/colorControlHighlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icona lucchetto chiuso -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="@string/arm_icon"
                        app:tint="?attr/colorPrimary" />

                    <!-- Testo descrittivo azione arma -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_arm"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_arm_desc"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                    </LinearLayout>

                    <!-- Freccia navigazione -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- CARD AZIONE DISARMA                        -->
            <!-- Permette di disattivare il sistema di allarme -->
            <!-- ========================================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_disarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:rippleColor="?attr/colorControlHighlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icona lucchetto aperto -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_lock_open"
                        android:contentDescription="@string/disarm_icon"
                        app:tint="?attr/colorPrimary" />

                    <!-- Testo descrittivo azione disarma -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_disarm"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_disarm_desc"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                    </LinearLayout>

                    <!-- Freccia navigazione -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================== -->
            <!-- CARD VERIFICA STATO                        -->
            <!-- Permette di richiedere lo stato attuale del sistema -->
            <!-- ========================================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_check_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                app:rippleColor="?attr/colorControlHighlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icona informazioni -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="@string/status_icon"
                        app:tint="?attr/colorPrimary" />

                    <!-- Testo descrittivo verifica stato -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_status"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_status_desc"
                            android:textAppearance="?attr/textAppearanceBodySmall" />

                    </LinearLayout>

                    <!-- Freccia navigazione -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ========================================== -->
    <!-- INDICATORE DI CARICAMENTO                  -->
    <!-- Mostra una barra di progresso durante le operazioni -->
    <!-- ========================================== -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
